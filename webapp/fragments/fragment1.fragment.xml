                    id="_idval2"
                    width="100%"
                    visible="false"
                    placeholder="to"
                /> -->

            </VBox>

             </f:content>
                </f:SimpleForm>
            </VBox>
        </content>

         <beginButton>
                <Button
                    type="Success"
                    text="ok"
                    press="okpress"
                />
       </beginButton>

        <endButton>     
                 <Button
                    type="Reject"
                    text="Cancel"
                    press="cancelpress"
                />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
