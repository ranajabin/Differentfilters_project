                                        id="_idval5"
                                        visible="false"
                                        placeholder="to"
                                        items="{Data1>/results}"
                                    >
                                        <core:Item
                                            key="{/results>EmpDep}"
                                            text="{Data1>EmpDep}"
                                        />
                                    </ComboBox>
                 <ComboBox
                                        selectionChange="handleSelectionChange"
                                        selectionFinish="handleSelectionFinish"
                                        width="200px"
                                        id="_idval6"
                                        visible="false"
                                        placeholder="to"
                                        items="{Data1>/results}"
                                    >
                                        <core:Item
                                            key="{/results>BasicPay}"
                                            text="{Data1>BasicPay}"
                                        />
                                    </ComboBox>
                 <ComboBox
                                        selectionChange="handleSelectionChange"
                                        selectionFinish="handleSelectionFinish"
                                        width="200px"
                                        id="_idval7"
                                        visible="false"
                                        placeholder="to"
                                        items="{Data1>/results}"
                                    >
                                        <core:Item
                                            key="{/results>Hra}"
