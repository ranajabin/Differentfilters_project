<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:m="sap.ui.webc.main"
    xmlns:f="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
>
    <Dialog id="pDialog">
        <content>
         
         <VBox alignContent="Center" alignItems="Center" width = "100%" height = "300px">
                <f:SimpleForm editable="true" alignItems="Center" alignContent="Center" id = "form1" title="Employee Data" width="500px"  class=".sapMFlexBoxBGTransparent"
                >
                    <f:content>
            <VBox  
                alignContent="Center"
                alignItems="Center"
                height="100px"
            >
             <Label text="Define Conditions" id = "_idinpt11" height = "100%" width = "100%" />
              <VBox height = "100px" />
                <ComboBox
                    id="_idcmb1"
                    value="Select Operators"
                    selectionChange="onHandleSelection"
                >
                    <core:Item
                        text="Contains"
                        id="_idcntn"
                    />
                    <core:Item
                        text="EQ"
                        id="_idEq"
                    />
                    <core:Item
                        text="BT"
                        id="_idbtn"
                    />
                    <core:Item
                        text="StartsWith"
                        id="_idstrt"
                    />
                    <core:Item
                        text="EndsWith"
                        id="_idend"
                    />
                    <core:Item
                        text="LT"
                        id="_idless"
                    />
                    <core:Item
                        text="LE"
                        id="_idlseq"
                    />
                    <core:Item
                        text="GT"
                        id="_idgreater"
                    />
                    <core:Item
                        text="GE"
                        id="_idgreq"
                    />
                </ComboBox>
                    <VBox height = "80px">  </VBox>
                  <ComboBox
                                        selectionChange="handleSelectionChange"
                                        selectionFinish="handleSelectionFinish"
                                        width="200px"
                                        id="_idval1"
                                        visible="false"
                                        placeholder="to"
                                        items="{Data1>/results}"
                                    >
                                        <core:Item
                                            key="{/results>EmpId}"
                                            text="{Data1>EmpId}"
                                        />
                                    </ComboBox>
                 <ComboBox
                                        selectionChange="handleSelectionChange"
                                        selectionFinish="handleSelectionFinish"
                                        width="200px"
                                        id="_idval2"
                                        visible="false"
                                        placeholder="to"
                                        items="{Data1>/results}"
                                    >
                                        <core:Item
                                            key="{/results>EmpName}"
                                            text="{Data1>EmpName}"
                                        />
                                    </ComboBox>
                 <ComboBox
                                        selectionChange="handleSelectionChange"
                                        selectionFinish="handleSelectionFinish"
                                        width="200px"
                                        id="_idval3"
                                        visible="false"
                                        placeholder="to"
                                        items="{Data1>/results}"
                                    >
                                        <core:Item
                                            key="{/results>EmpPhone}"
                                            text="{Data1>EmpPhone}"
                                        />
                                    </ComboBox>
                 <ComboBox
                                        selectionChange="handleSelectionChange"
                                        selectionFinish="handleSelectionFinish"
                                        width="200px"
                                        id="_idval4"
                                        visible="false"
                                        placeholder="to"
                                        items="{Data1>/results}"
