                                        />
                                    </ComboBox>
                 <ComboBox
                                        selectionChange="handleSelectionChange"
                                        selectionFinish="handleSelectionFinish"
                                        width="200px"
                                        id="_idval8"
                                        visible="false"
                                        placeholder="to"
                                        items="{Data1>/results}"
                                    >
                                        <core:Item
                                            key="{/results>SplAllowance}"
                                            text="{Data1>SplAllowance}"
                                        />
                                    </ComboBox>
                 <ComboBox
                                        selectionChange="handleSelectionChange"
                                        selectionFinish="handleSelectionFinish"
                                        width="200px"
                                        id="_idval9"
                                        visible="false"
                                        placeholder="to"
                                        items="{Data1>/results}"
                                    >
                                        <core:Item
                                            key="{/results>ShiftAllowance}"
                                            text="{Data1>ShiftAllowance}"
                                        />
                                    </ComboBox>
                 <ComboBox
                                        selectionChange="handleSelectionChange"
                                        selectionFinish="handleSelectionFinish"
                                        width="200px"
                                        id="_idval10"
                                        visible="false"
                                        placeholder="to"
                                        items="{Data1>/results}"
                                    >
                                        <core:Item
                                            key="{/results>MonthlyPay}"
